page {
  padding-bottom: 90rpx;
}
.page image {
  width: 100%;
}
.page .synopsis {
  margin: 20rpx;
  background-color: white;
  border-radius: 20rpx;
}
.page .synopsis .title {
  font-size: large;
  padding: 15rpx;
  font-weight: 550;
}
.page .synopsis .price_mode {
  font-size: small;
  color: #ff8243;
  padding-left: 15rpx;
  padding-bottom: 35rpx;
}
.page .synopsis .detail {
  padding-bottom: 25rpx;
  padding-left: 15rpx;
  display: flex;
}
.page .synopsis .detail .type {
  flex: 1;
  color: #808080;
}
.page .synopsis .detail .info {
  flex: 3;
}
.page .detailed {
  margin: 20rpx;
  background-color: white;
  border-radius: 20rpx;
}
.page .detailed .title_tap {
  color: #ff8243;
  padding-left: 15rpx;
  padding-top: 15rpx;
  padding-bottom: 20rpx;
}
.page .detailed .text_style {
  width: 95%;
  padding: 15rpx;
}
.page .detailed .text_style .course_detailed {
  line-height: 50rpx;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ff8243;
}
.footer_tool .order {
  width: 100%;
  height: 100%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: larger;
}
/* ---------------------------- */
/*模态框*/
.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
}
.modal-cancel {
  position: absolute;
  z-index: 2000;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.bottom-dialog-body {
  width: 100%;
  position: absolute;
  z-index: 3000;
  bottom: 0;
  left: 0;
  background: #dfdede;
}
.bottom-dialog-body .Mcancel {
  width: 100%;
}
.bottom-dialog-body .Mcancel .model-order {
  color: var(--themeColor);
  font-size: medium;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.bottom-dialog-body .Mcancel form {
  margin-top: 20rpx;
}
.bottom-dialog-body .Mcancel form .weui-cell__bd {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
}
.bottom-dialog-body .Mcancel form .weui-cell__bd input {
  border: 1px solid #A9A9A9;
  border-radius: 10rpx;
  min-height: 60rpx;
  height: 60rpx;
}
.bottom-dialog-body .Mcancel .mdoel-tips {
  margin-left: 20rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  color: #808080;
}
.bottom-dialog-body .Mcancel .btn-area .btn-confirm {
  width: 100%;
  display: flex;
  justify-content: center;
}
.bottom-dialog-body .Mcancel .btn-area .btn-confirm button {
  width: 95%;
  border-radius: 50rpx;
  color: white;
  background-color: var(--themeColor);
}
/*动画前初始位置*/
.bottom-positon {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}
